<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.orangejam.ischool.fragments.GradeMasterDetailFragment">

    <fragment
        android:id="@+id/masterGradeFragment"
        android:name="com.orangejam.ischool.fragments.GradeFragment"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_grades_list"
        class="com.orangejam.ischool.fragments.GradeFragment"
        android:tag="masterGradeTag" />
    <fragment
        android:id="@+id/detailGradeFragment"
        android:name="com.orangejam.ischool.fragments.WebFragment"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="2"
        tools:layout="@layout/fragment_web"
        android:tag="detailGradeTag"/>

</LinearLayout>
