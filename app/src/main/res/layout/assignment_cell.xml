<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/assignmentCheckImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/Icon"
        android:src="@drawable/rulogo"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/assignmentNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textSize="17sp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="4dp"
        android:gravity="left"
        android:maxWidth="210dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/assignmentCourseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="12sp"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@id/assignmentNameLabel"
        android:gravity="left"
        android:maxWidth="210dp"
        android:textColor="#808080"
        android:singleLine="true" />

    <TextView
        android:id="@+id/assignmentDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:layout_marginRight="16dp"
        android:layout_centerVertical="true"
        android:singleLine="true" />

</RelativeLayout>